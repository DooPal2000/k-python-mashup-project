<% layout('layouts/boilerplate')%>

<main class="px-3 py-5">
    <div class="container">
        <div class="text-center">
            <!-- 이미지 컨테이너 개선 -->
            <div class="hero-image-wrapper mb-4 mx-auto" 
                style="width:280px; height:280px; overflow:hidden;">
                <img src="img/trendis.png" 
                    alt="트렌디스 로고"
                    class="hero-logo shadow-lg mx-auto d-block"
                    style="width:100%; height:100%; object-fit:cover;">
            </div>
            
            <!-- 타이틀 개선 -->
            <h1 class="display-4 fw-bold text-secondary mb-3">
                Trendis
            </h1>
            
            <!-- 서브타이틀 개선 -->
            <!-- <p class="lead text-muted mb-4">
                <span class="fs-3 text-secondary">Trendis</span>
            </p> -->
            
            <!-- 환영 메시지 개선 -->
            <p class="fs-5 text-secondary mb-5">
                빠른 트렌드 분석을 위한<br>
                <strong class="text-secondary">스마트한 툴</strong>
            </p>
            
            <!-- 버튼 그룹 개선 -->
            <div class="d-grid gap-3 d-md-flex justify-content-md-center">
                <% if(!currentUser) { %>
                    <a href="/login" class="btn btn-primary btn-lg px-5 py-3 rounded-pill shadow">
                        <i class="fas fa-sign-in-alt me-2"></i>
                        로그인하기
                    </a>
                <% } else if(currentUser.role=='user'){ %>
                    <a href="/trends/blog" class="btn btn-success btn-lg px-5 py-3 rounded-pill shadow">
                        <i class="fas fa-boxes me-2"></i>
                        블로그 트렌드 검색
                    </a>
                    <a href="/trends/local" class="btn btn-success btn-lg px-5 py-3 rounded-pill shadow">
                        <i class="fas fa-boxes me-2"></i>
                        지역 트렌드 검색
                    </a>
                    <a href="/trends/datalab" class="btn btn-success btn-lg px-5 py-3 rounded-pill shadow">
                        <i class="fas fa-boxes me-2"></i>
                        데이터랩 트렌드 검색
                    </a>
                <% } else { %>
                    <a href="/admin" class="btn btn-danger btn-lg px-5 py-3 rounded-pill shadow">
                        <i class="fas fa-cog me-2"></i>
                        관리자 페이지
                    </a>
                <% } %>
            </div>
        </div>
    </div>
</main>
